[user]
    name = Eli Finer
    email = eli.finer@gmail.com

[core]
    editor = vim
    ignorecase = true
    excludesfile = ~/.gitignore
    
[color]
    ui = auto

[push]
    default = tracking
	followTags = true

[merge]
    tool = vimdiff
    keepBackup = false
    prompt = false

[diff]
    tool = vimdiff
    mnemonicprefix = true

[difftool]
    prompt = false

[alias]
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen%ar%Creset %C(bold blue)%an%Creset' --abbrev-commit
    branch-name = "!git rev-parse --abbrev-ref HEAD"
    publish = "!f() { BRANCH=${1:-$(git branch-name)}; git push origin $BRANCH:$USER/_$BRANCH; }; f"
    unpublish = "!f() { BRANCH=${1:-$(git branch-name)}; git push origin :$USER/_$BRANCH; }; f"
    review = "!f() { BRANCH=${1:-$(git branch-name)}; git push origin $BRANCH:$USER/review/$BRANCH; }; f"
    unreview = "!f() { BRANCH=${1:-$(git branch-name)}; git push origin :$USER/review/$BRANCH; }; f"
