[user]
    name = Eli Finer
    email = eli.finer@gmail.com

[core]
    editor = vim
    ignorecase = true
    excludesfile = ~/.gitignore
    
[color]
    ui = auto

[push]
    default = tracking
	followTags = true

[merge]
    tool = vimdiff
    keepBackup = false
    prompt = false

[diff]
    tool = vimdiff
    mnemonicprefix = true

[difftool]
    prompt = false

[alias]
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen%ar%Creset %C(bold blue)%cn%Creset' --abbrev-commit
    branch-name = "!git rev-parse --abbrev-ref HEAD"
    publish = "!git push -u origin $(git branch-name):eli/$(git branch-name)"
    unpublish = "!git push origin :eli/$(git branch-name)"
    review = "!git push -u origin $(git branch-name):$USER/review/$(git branch-name)"
    unreview = "!git push -u origin :$USER/review/$(git branch-name)"
